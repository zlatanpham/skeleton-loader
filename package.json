{
  "name": "@uxui/skeleton-loader",
  "version": "0.1.1",
  "description": "React component helps ease the process of creating skeleton screens",
  "author": "zlatanpham <https://github.com/zlatanpham>",
  "keywords": [
    "react",
    "loader",
    "loading",
    "progress",
    "skeleton screen"
  ],
  "license": "MIT",
  "repository": "zlatanpham/skeleton-loader",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 react-scripts-ts test --env=jsdom",
    "test:ci": "cross-env CI=1 react-scripts-ts test --env=jsdom --maxWorkers=2",
    "test:watch": "react-scripts-ts test --env=jsdom",
    "docz:dev": "docz dev",
    "docz:build": "docz build && echo \"/* /index.html 200\" > .docz/dist/_redirects ",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "@emotion/core": "^10.0.21",
    "@emotion/styled": "^10.0.17",
    "@types/styled-components": "^4.1.19",
    "styled-components": "^4.4.0"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@svgr/rollup": "^2.4.1",
    "@testing-library/react": "^9.3.0",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.1.4",
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "gh-pages": "^1.2.0",
    "jest-emotion": "^10.0.17",
    "jest-styled-components": "^6.3.3",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts-ts": "^3.1.0",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-multi-entry": "^2.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "rollup-plugin-url": "^1.4.0",
    "typescript": "^3.6.3"
  },
  "files": [
    "dist",
    "emotion"
  ]
}
